##
##  Makefile -- Build procedure for sample memc_sess Apache module
##  Autogenerated via ``apxs -n memc_sess -g''.
##

APXS=apxs
APACHECTL=apachectl

builddir=.
top_srcdir=`$(APXS) -q INSTALLBUILDDIR`/..
top_builddir=/usr/share/apache2
include /usr/share/apache2/build/special.mk

SH_LIBS=-lmemcached

#   the default target
all: local-shared-build

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_memc_sess.o mod_memc_sess.lo mod_memc_sess.slo mod_memc_sess.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/memc_sess

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

